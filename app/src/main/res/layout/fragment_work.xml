<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.WorkManager.WorkFragment">

    <TextView
        android:id="@+id/title_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:text="Work Manager"
        android:textSize="50sp"
        />
    <Button
        android:id="@+id/btn_start_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_work"
        app:layout_constraintStart_toStartOf="@id/title_work"
        android:layout_marginTop="100dp"
        android:text="Start Work"
        />
    <Button
        android:id="@+id/btn_stop_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_work"
        app:layout_constraintEnd_toEndOf="@id/title_work"
        android:layout_marginTop="100dp"
        android:text="Stop Work"
        />

</androidx.constraintlayout.widget.ConstraintLayout>